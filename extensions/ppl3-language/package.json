{
    "name": "ppl3-lang",
    "displayName": "PPL3",
    "description": "PPL3 language syntax highlighting support",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ppl3"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PPL3 configuration",
            "properties": {
                "ppl3Language.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server"
                },
                "ppl3Language.favouriteNumber": {
                    "scope": "resource",
                    "type": "number",
                    "default": 7,
                    "description": "Select your favourite number"
                }
            }
        },
        "languages": [
            {
                "id": "ppl3",
                "aliases": [
                    "PPL3",
                    "ppl3"
                ],
                "extensions": [
                    ".p3"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ppl3",
                "scopeName": "source.ppl3",
                "path": "./syntaxes/ppl3.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "tslint": "^5.16.0",
        "typescript": "^3.6.4"
    }
}
